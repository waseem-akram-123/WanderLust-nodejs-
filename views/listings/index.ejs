<% layout("layouts/boilerplate") %>

<div class="my-5" style="margin-top: 80px">
  <div class="text-center mb-5">
    <h2 class="fw-bold mb-3">Discover Your Perfect Stay</h2>
    <p class="lead text-muted">
      Explore our curated collection of unique accommodations for your next adventure
    </p>
  </div>

  <% if (allListings && allListings.length === 0) { %>
  <div class="text-center py-5">
    <h4 class="fw-semibold">No listings found for your search.</h4>
    <p class="text-muted mb-4">
      Try adjusting your search or explore other available listings.
    </p>
    <a href="/listings" class="btn btn-primary px-4">
      <i class="bi bi-arrow-left-circle me-2"></i>View All Listings
    </a>
  </div>
  <% } else { %>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 px-4">
    <% for (let listing of allListings) { %>
    <div class="col">
      <div class="card h-100 listing-card">
        <a href="/listings/<%= listing._id %>" class="listing-image-link">
          <img
            src="<%= listing.image?.url || 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=80' %>"
            class="card-img-top listing-image"
            alt="<%= listing.title %>"
            onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=80';"
          />
          <div class="image-overlay"></div>
        </a>
        <div class="card-body d-flex flex-column">
          <div class="mb-3">
            <h5 class="card-title fw-semibold"><%= listing.title %></h5>
            <p class="card-text text-muted mb-1">
              <i class="bi bi-geo-alt-fill text-primary"></i>
              <%= listing.location %>
            </p>
          </div>
          <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <span class="badge bg-success bg-opacity-10 text-success">
                <i class="bi bi-star-fill text-warning"></i>
                <% if (listing.rating && listing.rating > 0) { %> <%= listing.rating.toFixed(1) %> <% } else { %> No ratings yet! <% } %>
              </span>

              <p class="price mb-0 fw-bold">
                â‚¹<%= Number(listing.price).toLocaleString("en-IN") %>
                <span class="text-muted fw-normal">/night</span>
              </p>
            </div>
            <a href="/listings/<%= listing._id %>" class="btn btn-primary w-100">
              View Details <i class="bi bi-arrow-right ms-2"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <% } %>
</div>